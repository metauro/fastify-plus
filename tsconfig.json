{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "pretty": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "keyofStringsOnly": true,
    "lib": ["es6"],
    "sourceMap": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@sojs/*": ["packages/*"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
